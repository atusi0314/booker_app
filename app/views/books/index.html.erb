<h1>Book</h1>
<% @book.each do |book| %>
 <p><strong>title</strong></p>
 <%= book.title %>
 <%= link_to "Show",  %>
 <p><strong>body</strong></p>
 <%= book.body %>
<% end %>


<h2>New book</h2>
<%= form_with model: @books do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit "Create Book" %>
<% end %>
