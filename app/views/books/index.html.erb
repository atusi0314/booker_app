<body>
    <h1>Book</h1> 
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th colspan = "3"></th>
            </tr>
        </thead>
     <% @book.each do |book| %>
        <tbody>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book.id) %></td>
                <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
            </tr>
        </tbody>
     <% end %>
    </table>

    <h2 class="new-title">New book</h2>
        <% if @books.errors.any? %>
            <div class="error">
              <div class="error-message">
                <%= @books.errors.count %>errors prohibited this book from being saved:
              </div>
              <div class="error-text">
                <ul>
                    <% @books.errors.full_messages.each do |message| %>
                     <li><%= message %></li>
                    <% end %>
                </ul>
              </div>
            </div>    
        <% end %>
    
      <%= form_with model: @books do |f| %>
        <div class ="new">
            <h4>Title</h4>
            <%= f.text_field :title %>
        </div>
        <div class ="new">
            <h4>Body</h4>
            <%= f.text_area :body %>
        </div>
        <div class = "submit">   
            <%= f.submit "Create Book" %>
        </div> 
      <% end %>
</body>